{
    "name": "karbon-uyum-monorepo",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
        "dev:frontend": "cd frontend && npm run dev",
        "dev:backend": "cd backend && source venv/bin/activate && uvicorn main:app --reload",
        "build": "cd frontend && npm run build",
        "start": "cd frontend && npm start",
        "lint": "concurrently \"npm run lint:frontend\" \"npm run lint:backend\"",
        "lint:frontend": "cd frontend && npm run lint",
        "lint:backend": "cd backend && source venv/bin/activate && ruff check .",
        "test": "concurrently \"npm run test:frontend\" \"npm run test:backend\"",
        "test:frontend": "echo 'No frontend tests yet'",
        "test:backend": "cd backend && source venv/bin/activate && pytest",
        "postinstall": "cd frontend && npm install"
    },
    "devDependencies": {
        "concurrently": "^8.2.2"
    }
}